@model List<Employee>

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Employee List
            </h2>
        </div>
       
    </div>
    <div class="table-responsive"> 
    <table class="table table-bordered table-striped">

        <thead >
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Date of Birth
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Description
                </th>
                <th>
                    Department
                </th>
                
                <th> </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.DateOfBirth
                    </td>
                    <td>
                        @obj.Gender
                    </td>
                    <td>
                        @obj.Description
                    </td>
                    <td>
                        @obj.Department
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Employee" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> 
                                <i class="bi bi-vector-pen"></i> Update
                        </a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                        </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    </div>
</div>
