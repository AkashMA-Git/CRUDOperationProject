@model Employee


<form method="POST" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Employee</h2>
            <hr />
        </div>


        <div class="row p-1">
            <label class="p-0" asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="row p-1">
            <label class="p-0" asp-for="Email"></label>
            <input asp-for="Email" disabled class="form-control" />

        </div>

        <div class="row p-1">
            <label class="p-0" asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" disabledclass="form-control" />

        </div>

        <div class="row p-1">
            <label class="p-0" asp-for="Gender"></label>
            <input asp-for="Gender" disabled class="form-control" />

        </div>

        <div class="row p-1">
            <label class="p-0" asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />

        </div>

        <div class="row p-1">
            <label class="p-0" asp-for="Department"></label>
            <input asp-for="Department" disabled class="form-control" />

        </div>

        <div class="row ">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary mt-3 form-control">Delete</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary mt-3 border form-control">Back to List</a>

            </div>
        </div>

    </div>

</form>

